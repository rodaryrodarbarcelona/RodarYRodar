        // Este script implementa un scroll infinito profesional para el carrusel con navegación manual
        window.addEventListener("DOMContentLoaded", () => {
          const carousel = document.getElementById("infinite-carousel");
          const prevBtn = document.getElementById("prev-btn");
          const nextBtn = document.getElementById("next-btn");

          if (!carousel) return;

          const totalWidth = carousel.scrollWidth / 2; // Solo las imágenes originales
          const imageWidth = 600; // Ancho de cada imagen
          let start = null;
          let currentX = 0;
          const speed = 0.5; // píxeles por frame, ajusta para más rápido/lento
          let isPaused = false;
          let pauseTimeout = null;

          // Función para pausar el scroll automático temporalmente
          function pauseAutoScroll() {
            isPaused = true;
            if (pauseTimeout) clearTimeout(pauseTimeout);
            pauseTimeout = setTimeout(() => {
              isPaused = false;
            }, 3000); // Reanudar después de 3 segundos
          }

          // Función para mover manualmente
          function moveCarousel(direction) {
            pauseAutoScroll();

            if (direction === "next") {
              currentX -= imageWidth;
            } else if (direction === "prev") {
              currentX += imageWidth;
            }

            // Mantener dentro de los límites del carrusel duplicado
            if (Math.abs(currentX) >= totalWidth) {
              currentX = 0;
            } else if (currentX > 0) {
              currentX = -totalWidth + imageWidth;
            }

            carousel.style.transform = `translateX(${currentX}px)`;
          }

          function step(ts) {
            if (!start) start = ts;
            const elapsed = ts - start;

            if (!isPaused) {
              currentX -= speed;
              if (Math.abs(currentX) >= totalWidth) {
                currentX = 0;
                start = ts;
              }
              carousel.style.transform = `translateX(${currentX}px)`;
            }

            requestAnimationFrame(step);
          }

          // Event listeners para los botones
          if (prevBtn) {
            prevBtn.addEventListener("click", () => moveCarousel("prev"));
          }
          if (nextBtn) {
            nextBtn.addEventListener("click", () => moveCarousel("next"));
          }

          carousel.style.willChange = "transform";
          requestAnimationFrame(step);
        });
      </script>

---
import Layout from "../layouts/Layout.astro";
//import { useTranslations } from "../i18n/languages";
import { useTranslations, defaultLanguage } from "../i18n/languages";

// const t = useTranslations(Astro.currentLocale);

const lang = (Astro.locals as any)?.lang || defaultLanguage;
const t = useTranslations(lang);
---

<Layout
  title={`${t("services")} - RodaYRodar`}
  description={t("services_description")}
>
  <div class="relative min-h-screen">
    <!-- Estilo para el fondo -->
    <style>
      .bg-service-image-top-right {
        background-image: url("https://res.cloudinary.com/dxytyvnn2/image/upload/v1755874774/7_rzrtnx_d109e1-removebg-preview_bhjyh4.png");
        background-repeat: no-repeat;
        background-size: contain;
        background-position: top right;
        position: fixed;
        top: 0;
        right: 0;
        width: 40%;
        height: 40%;
        opacity: 0.25;
        z-index: 0;
        pointer-events: none;
      }

      .bg-service-image-bottom-left {
        background-image: url("https://res.cloudinary.com/dxytyvnn2/image/upload/v1755874774/6_ufxocv_a725c8-removebg-preview_gprmza.png");
        background-repeat: no-repeat;
        background-size: contain;
        background-position: bottom left;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 40%;
        height: 40%;
        opacity: 0.25;
        z-index: 0;
        pointer-events: none;
      }

      @media (max-width: 768px) {
        .bg-service-image-top-right {
          width: 45%;
          height: 20%;
          background-position: top right;
          top: 70px; /* Ajustado para que aparezca debajo del header en móvil */
        }
        .bg-service-image-bottom-left {
          width: 45%;
          height: 20%;
          background-position: bottom left;
        }
      }

      /* Ajuste específico para pantallas muy pequeñas */
      @media (max-width: 480px) {
        .bg-service-image-top-right {
          width: 50%;
          height: 18%;
          opacity: 0.25; /* Mantenemos la opacidad original */
        }
        .bg-service-image-bottom-left {
          width: 50%;
          height: 18%;
          opacity: 0.25; /* Mantenemos la opacidad original */
        }
      }
    </style>

    <!-- Divs que contienen las imágenes de fondo -->
    <div class="bg-service-image-top-right"></div>
    <div class="bg-service-image-bottom-left"></div>
    <!-- Contenido principal -->
    <div class="container mx-auto px-4 py-12 relative z-10">
      <h1
        class="text-4xl font-bold mb-8 text-center text-gray-700 dark:text-white"
      >
        {t("services_title")}
      </h1>

      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-12 text-center">
          {t("services_description")}
        </p>

        <!-- Servicio 1 -->
        <div class="mb-16">
          <div class="flex flex-col md:flex-row items-start mb-8">
            <div class="md:w-auto mb-6 md:mb-0 md:mr-12 flex-shrink-0">
              <div
                class="bg-primary bg-opacity-10 dark:bg-opacity-20 rounded-full p-6 inline-block"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-16 w-16 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h2
                class="text-2xl font-bold mb-4 text-gray-700 dark:text-gray-300 text-left"
              >
                {t("film_production_title")}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4 text-left">
                {t("film_production_description")}
              </p>
              <ul
                class="list-disc pl-5 text-gray-600 dark:text-gray-300 space-y-2 text-left"
              >
                {t("film_production_list").map((item) => <li>{item}</li>)}
              </ul>
            </div>
          </div>
        </div>

        <!-- Servicio 2 -->
        <div class="mb-16">
          <div class="flex flex-col md:flex-row items-start mb-8">
            <div class="md:w-auto mb-6 md:mb-0 md:mr-12 flex-shrink-0">
              <div
                class="bg-primary bg-opacity-10 dark:bg-opacity-20 rounded-full p-6 inline-block"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-16 w-16 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h2
                class="text-2xl font-bold mb-4 text-gray-700 dark:text-gray-300 text-left"
              >
                {t("post_production_title")}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4 text-left">
                {t("post_production_description")}
              </p>
              <ul
                class="list-disc pl-5 text-gray-600 dark:text-gray-300 space-y-2 text-left"
              >
                {t("post_production_list").map((item) => <li>{item}</li>)}
              </ul>
            </div>
          </div>
        </div>

        <!-- Servicio 3 -->
        <div class="mb-16">
          <div class="flex flex-col md:flex-row items-start mb-8">
            <div class="md:w-auto mb-6 md:mb-0 md:mr-12 flex-shrink-0">
              <div
                class="bg-primary bg-opacity-10 dark:bg-opacity-20 rounded-full p-6 inline-block"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-16 w-16 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h2
                class="text-2xl font-bold mb-4 text-gray-700 dark:text-gray-300 text-left"
              >
                {t("equipment_rental_title")}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4 text-left">
                {t("equipment_rental_description")}
              </p>
              <ul
                class="list-disc pl-5 text-gray-600 dark:text-gray-300 space-y-2 text-left"
              >
                {t("equipment_rental_list").map((item) => <li>{item}</li>)}
              </ul>
            </div>
          </div>
        </div>

        <!-- Servicio 4 -->
        <div>
          <div class="flex flex-col md:flex-row items-start mb-8">
            <div class="md:w-auto mb-6 md:mb-0 md:mr-12 flex-shrink-0">
              <div
                class="bg-primary bg-opacity-10 dark:bg-opacity-20 rounded-full p-6 inline-block"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-16 w-16 text-primary"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-grow">
              <h2
                class="text-2xl font-bold mb-4 text-gray-700 dark:text-gray-300 text-left"
              >
                {t("training_workshops_title")}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4 text-left">
                {t("training_workshops_description")}
              </p>
              <ul
                class="list-disc pl-5 text-gray-600 dark:text-gray-300 space-y-2 text-left"
              >
                {t("training_workshops_list").map((item) => <li>{item}</li>)}
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Se ha eliminado la sección CTA -->
    </div>
  </div>
</Layout>

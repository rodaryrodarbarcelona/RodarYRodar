---
import "../styles/global.css";
import "../styles/theme-override.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import { languages, defaultLanguage } from "../i18n/languages";

interface Props {
  title?: string;
  description?: string;
}

const currentLang = Astro.locals?.lang || defaultLanguage;
const { title = "RodaYRodar", description = "Productora cinematográfica" } = Astro.props;
---

<!doctype html>
<html
  lang={currentLang}
  class={`${Astro.cookies.get("theme")?.value === "dark" ? "dark" : ""}`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Inicialización del tema -->
    <script is:inline>
      (function () {
        const shouldUseDarkTheme = () => {
          const saved = localStorage.getItem("theme");
          if (saved === "dark") return true;
          if (saved === "light") return false;
          return window.matchMedia("(prefers-color-scheme: dark)").matches;
        };
        const isDark = shouldUseDarkTheme();
        if (isDark) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
        document.addEventListener("themeChanged", (e) => {
          const newTheme = e.detail.theme;
          if (newTheme === "dark") {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        });
      })();
    </script>
  </head>

  <body
    class="bg-white dark:bg-gray-900 text-gray-800 dark:text-white min-h-screen flex flex-col transition-colors duration-300"
    data-theme={Astro.cookies.get("theme")?.value || "light"}
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>


---
import "../styles/global.css";
import "../styles/theme-override.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";
import { languages, defaultLanguage } from "../i18n/languages";

interface Props {
  title?: string;
  description?: string;
}

// Usamos casting para evitar el error de TypeScript
const currentLang = (Astro.locals as any)?.lang || defaultLanguage;
const { title = "Rodar Y Rodar", description = "Productora cinematográfica" } =
  Astro.props;
---

<!doctype html>
<html lang={currentLang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo_RR.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Inicialización del tema (forzado a oscuro por defecto) -->
    <script is:inline>
      (function () {
        // Establecer modo oscuro por defecto si no hay preferencia guardada
        if (!localStorage.getItem("theme")) {
          localStorage.setItem("theme", "dark");
        }

        // Siempre iniciar con modo oscuro a menos que el usuario haya elegido explícitamente modo claro
        const shouldUseDarkTheme = () => {
          const saved = localStorage.getItem("theme");
          if (saved === "light") return false;
          return true; // Modo oscuro por defecto
        };

        const isDark = shouldUseDarkTheme();
        if (isDark) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Seguir escuchando cambios de tema
        document.addEventListener("themeChanged", (e) => {
          const newTheme = e.detail.theme;
          if (newTheme === "dark") {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        });
      })();
    </script>
  </head>

  <body
    class="bg-white dark:bg-gray-900 text-gray-800 dark:text-white min-h-screen flex flex-col transition-colors duration-300"
    data-theme="dark"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <CookieBanner />
  </body>
</html>

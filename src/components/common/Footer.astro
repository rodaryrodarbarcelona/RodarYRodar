---
import { useTranslations } from "../../i18n/languages";
import Spinner from "../ui/Spinner.astro";
const t = useTranslations((Astro.locals as any)?.lang || "es");
---

<footer class="bg-gray-100 dark:bg-gray-900 dark:text-white py-8 mt-12 transition-colors duration-300">


  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-6 md:mb-0 text-center md:text-left">
        <Spinner class="h-12 w-auto mx-auto md:mx-0" />
        <p class="text-base mt-2 text-gray-600 dark:text-gray-400">
          © {new Date().getFullYear()} Rodar y Rodar. Todos los derechos reservados.
        </p>
      </div>

      <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 sm:gap-12 text-center md:text-left">
        
        <!-- Navegación -->
        <div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">
            {t("navigation")}
          </h3>
          <ul class="space-y-2">
            <li>
              <a
                href="/"
                class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition"
              >
                {t("home")}
              </a>
            </li>
            <li>
              <a
                href="/filmografias"
                class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition"
              >
                {t("filmography")}
              </a>
            </li>
            <li>
              <a
                href="/servicios"
                class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition"
              >
                {t("services")}
              </a>
            </li>
            <li>
              <a
                href="/about"
                class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition"
              >
                {t("about")}
              </a>
            </li>
          </ul>
        </div>

        <!-- Contacto -->
        <div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">
            {t("contact")}
          </h3>
          <ul class="space-y-2">
            <li class="text-gray-600 dark:text-gray-300 text-base">info@rodayrodar.com</li>
            <li class="text-gray-600 dark:text-gray-300 text-base">+34 000 000 000</li>
          </ul>
        </div>

        <!-- Síguenos -->
        <div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">
            {t("follow_us")}
          </h3>
          <div class="flex justify-center md:justify-start space-x-6 mt-3">
            
            {/* Instagram */}
            <a
              href="https://instagram.com/rodayrodar"
              target="_blank"
              rel="noopener"
              aria-label="Síguenos en Instagram"
              class="text-gray-600 hover:text-primary dark:text-gray-300 dark:hover:text-primary transition duration-200"
            >
